{
    "name": "chunhei2008/hyperf-validation",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "chunhei2008/hyperf-validation",
    "autoload": {
        "psr-4": {
            "Chunhei2008\\Hyperf\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.3",
        "hyperf/utils": "1.0.*",
        "hyperf/framework": "1.0.*",
        "hyperf/di": "1.0.*",
        "nesbot/carbon": "^2.21",
        "symfony/http-foundation":"^4.3",
        "egulias/email-validator":"^2.1",
        "psr/http-message":"^1.0",
        "psr/container":"^1.0",
        "chunhei2008/hyperf-translation": "dev-master"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "hyperf/testing": "1.0.*",
        "phpstan/phpstan": "^0.10.5",
        "swoft/swoole-ide-helper": "dev-master"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyze": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Chunhei2008\\Hyperf\\Validation\\ConfigProvider"
        }
    }
}
